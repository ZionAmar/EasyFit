<%- include('top') %>

<div class="container">    
    <!-- כפתור מעבר לעמוד הוספת משתמש -->
    <a href="/users/add"><button>➕ הוסף משתמש</button></a>

    <table border="1">
        <thead>
            <tr>
                <th>שם מלא</th>
                <th>אימייל</th>
                <th>טלפון</th>
                <th>תפקיד</th>
                <th>פעולות</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.full_name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td>
                        <% if(user.is_admin) { %> מנהל <% } else if(user.is_trainer) { %> מאמן <% } else { %> לקוח <% } %>
                    </td>
                    <td>
                        <!-- כפתור מעבר לעמוד עריכה -->
                        <a href="/users/edit/<%= user.id %>"><button>✏ ערוך</button></a>
                        
                        <!-- טופס למחיקה -->
                        <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('למחוק את <%= user.full_name %>?');">🗑 מחק</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('bottom') %>
