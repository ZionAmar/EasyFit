<%- include('top') %>

<div class="container">    
    <a href="/meetings/add"><button>➕ הוסף מפגש</button></a>

    <table border="1">
        <thead>
            <tr>
                <th>שם</th>
                <th>מאמן</th>
                <th>תאריך</th>
                <th>שעת התחלה</th>
                <th>שעת סיום</th>                
                <th>חדר</th>
                <th>משתתפים</th>
                <th>פעולות</th>
            </tr>
        </thead>
        <tbody>
            <% meetings.forEach(meeting => { %>
                <tr>
                    <td><%= meeting.name %></td>
                    <td><%= meeting.trainer_name %></td>
                    <td><%= new Date(meeting.date).toLocaleDateString('he-IL') %></td>
                    <td><%= meeting.start_time.slice(0,5) %></td>
                    <td><%= meeting.end_time.slice(0,5) %></td>                    
                    <td><%= meeting.room_name %></td>
                    <td><%= meeting.participant_count %></td>
                    <td>
                        <a href="/meetings/edit/<%= meeting.id %>"><button>✏ ערוך</button></a>
                        <form action="/meetings/delete/<%= meeting.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('למחוק את המפגש <%= meeting.name %>?');">🗑 מחק</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('bottom') %>
