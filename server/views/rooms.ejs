<%- include('top') %>

<div class="container">    
    <a href="/rooms/add"><button>➕ הוסף חדר</button></a>

    <table border="1">
        <thead>
            <tr>
                <th>שם החדר</th>
                <th>קיבולת</th>
                <th>פנוי?</th>
                <th>ציוד?</th>
                <th>פעולות</th>
            </tr>
        </thead>
        <tbody>
            <% rooms.forEach(room => { %>
                <tr>
                    <td><%= room.name %></td>
                    <td><%= room.capacity %></td>
                    <td><%= room.is_available ? '✅ כן' : '❌ לא' %></td>
                    <td><%= room.has_equipment ? '🧰 כן' : '❌ לא' %></td>
                    <td>
                        <a href="/rooms/edit/<%= room.id %>"><button>✏ ערוך</button></a>
                        <form action="/rooms/delete/<%= room.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('למחוק את החדר <%= room.name %>?');">🗑 מחק</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('bottom') %>
